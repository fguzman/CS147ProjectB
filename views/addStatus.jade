      $('#addButton').click(function() {
      document.getElementById('locationField').value = _location;
      $('#statusForm').submit()
      });
      function cancelStatus(save) {
      $.mobile.changePage("personal", { transition: "slidedown"} );
      }
      function fileSelected() {
      var oFile = document.getElementById('imageFile').files[0];
      
      // prepare HTML5 FileReader
      var oReader = new FileReader();
      oReader.onload = function(e){

      // e.target.result contains the DataURL which we will use as a source of the image
      document.getElementById('imageField').value = e.target.result;
      };

      // read selected file as DataURL
      oReader.readAsDataURL(oFile);
      };

